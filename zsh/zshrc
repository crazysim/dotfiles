# Path to your oh-my-zsh configuration.
export ZSH=$HOME/.oh-my-zsh

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
# Optionally, if you set this to "random", it'll load a random theme each
# time that oh-my-zsh is loaded.
export ZSH_THEME="crazysim"

# Set to this to use case-sensitive completion
# export CASE_SENSITIVE="true"

# Comment this out to disable weekly auto-update checks
# export DISABLE_AUTO_UPDATE="true"

# Uncomment following line if you want to disable colors in ls
# export DISABLE_LS_COLORS="true"

# Uncomment following line if you want to disable autosetting terminal title.
# export DISABLE_AUTO_TITLE="true"

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(rails rvm gem ruby git brew osx github autojump ant vi-mode pip)

source $ZSH/oh-my-zsh.sh

# Customize to your needs...


# Making sure these are in there
# Android
export PATH=$HOME/android-ndk-r5b:$HOME/android-sdk-mac_86/platform-tools:$PATH
# Probably Xcode
export PATH=/Developers/usr/bin:$PATH
# System Stuff
export PATH=/usr/bin:/bin:/usr/sbin/:/sbin:/usr/X11/bin:$PATH

# HomeBrew
export PATH=/usr/local/bin:$PATH
export PATH=/usr/local/sbin:$PATH

# Homebrew Python
export PATH=/usr/local/share/python:$PATH
# export PATH=/usr/local/Cellar/python/2.7.1/bin:$PATH

# Personal Binaries
export PATH=$HOME/bin:$PATH

# export PATH=/usr/local/sbin:/Users/nelson/android-ndk-r5b:/Users/nelson/android-sdk-mac_86/platform-tools:/usr/local/Cellar/python/2.7.1/bin:/Developer/usr/bin:/Users/nelson/.gem/ruby/1.8/bin:/usr/local/bin:/Users/nelson/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin:/usr/X11/bin
# No longer needed as RVM handles the ruby stuff
# export PATH=/usr/local/Cellar/ruby/1.9.2-p180/bin:$PATH
# export PATH=/usr/local/sbin:/Users/nelson/android-ndk-r5b:/Users/nelson/android-sdk-mac_86/tools/:$PATH
export ANDROID_HOME=/Users/nelson/android-sdk-mac_86/

export PATH=/usr/local/share/python:$PATH

# Virtualenv Stuff
export WORKON_HOME=$HOME/.virtualenvs
source /usr/local/share/python/virtualenvwrapper.sh
[[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm" # Load RVM function

export EDITOR="vim"

# Disable ZSH update prompt and be more Chrome-like and just update, damn it.
export DISABLE_UPDATE_PROMPT="true"
